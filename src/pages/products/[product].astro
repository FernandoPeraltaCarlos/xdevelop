---
import Main from '../../layouts/Main.astro';
import Container from '../../layouts/Content.astro'
import { Image } from 'astro:assets';

let param:any = Astro.url.searchParams.get('data');
let data:any = JSON.parse(param);
---
<Main>
    <Container>
        <section class="user">
            <h1>{`${data ? data.title : 'Cargando...'}`}</h1>
            <div class="group">
                <p>Precio: {data ? data.price : 'Cargando...'}</p>
                <p>Descripcion: {data ? data.description : 'Cargando...'}</p>
            </div>
            <div class="group">
                <p>Categoria: {data ? data.category : 'Cargando...'}</p>
                <figure>
                    <Image width='250' height='250'  src={data ? data.image : '#'} alt="product-image">
                </figure>
                <p>Calificacion: {data ? data.rating.rate : 'Cargando...'}</p>
                <p>Cantidad: {data ? data.rating.count : 'Cargando...'}</p>
            </div>
        </section>
    </Container>
</Main>
<script>
    const token = localStorage.getItem('token');
    if(!token){
        window.location.href = '/';
    }
</script>

<style lang="scss">
    .user{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        backdrop-filter: blur(16px) saturate(180%);
        -webkit-backdrop-filter: blur(16px) saturate(180%);
        background-color: rgba(255, 255, 255, 0.15);
        width: clamp(350px,60%,700px);
        padding: 2em;
        margin-top: 2em;
        row-gap: 1em;
        h1{
            color:white;
            font-size: clamp(1rem,100vw,2rem);
        }
    }
    .group{
        img{
            margin: 1em 0 1em 0;
        }
        h4{
            font-weight: bold;
            font-size: clamp(.8rem,100vw,1.2rem);
            color:white;
            padding-bottom: .4em;
        }
        p{
            color:white;
            font-size: clamp(.6rem,100vw,1rem);
        }
    }
</style>